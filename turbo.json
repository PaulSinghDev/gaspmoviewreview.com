{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "**/.env", "CMS_ACCESS_TOKEN"],
  "globalEnv": ["CMS_ACCESS_TOKEN", "NEXT_PUBLIC_CMS_URI", "NEXT_PUBLIC_BASE_URI"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
